{
  "name": "poli-money-alpha",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "admin",
    "webapp"
  ],
  "scripts": {
    "dev": "pnpm supabase:start && pnpm --filter webapp dev",
    "dev:setup": "pnpm install && pnpm supabase:start && pnpm prisma:migrate && pnpm prisma:seed",
    "dev:webapp-only": "pnpm --filter webapp dev",
    "dev:admin": "pnpm --filter admin dev",
    "build": "prisma generate && prisma migrate deploy && pnpm --filter webapp build",
    "start": "pnpm --filter webapp start",
    "lint": "pnpm --filter admin lint",
    "format": "biome format --write .",
    "postinstall": "prisma generate",
    "db:generate": "pnpm --filter @poli-money-alpha/db generate",
    "db:migrate:dev": "pnpm --filter @poli-money-alpha/db migrate:dev",
    "db:migrate:deploy": "pnpm --filter @poli-money-alpha/db migrate:deploy",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:seed": "node prisma/seed.cjs",
    "data:import:mf": "node scripts/import-mf.cjs",
    "supabase:init": "pnpm dlx supabase init",
    "supabase:start": "pnpm dlx supabase start",
    "supabase:stop": "pnpm dlx supabase stop",
    "supabase:types": "pnpm dlx supabase gen types typescript --local > supabase/types.gen.ts",
    "supabase:reset": "pnpm dlx supabase db reset",
    "test": "pnpm --filter admin test",
    "test:watch": "pnpm --filter admin test:watch"
  },
  "dependencies": {
    "@nivo/sankey": "^0.99.0",
    "@poli-money-alpha/db": "workspace:*",
    "@prisma/client": "^6.14.0",
    "csv-parse": "^5.5.6",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "prisma": "^6.14.0",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm run format"
  }
}